FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 405.65; //initial condition

boundaryField
{
    front
    {
        type            empty;
    }

    back
    {
        type            empty;
    }   
    
    wall1
    {
        type            fixedValue;
        value           $internalField;
    }

    wall2
    {
        type            fixedValue;
        value           uniform 513.15; // solo calor en la zona 2
    }
    
    output
    {
        type            zeroGradient;
    }

    input
    {
        type            fixedValue;
        value           uniform 298.15; // temperature ambient 25ÂºC
    }
}


