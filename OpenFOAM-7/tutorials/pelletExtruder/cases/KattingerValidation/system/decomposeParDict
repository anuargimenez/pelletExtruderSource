FoamFile 
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      decomposeParDict;
}

numberOfSubdomains 6;		//Zahl der Kerne auf denen gerechnet werden soll, für IKT-Simulations-PC hat sich ein Optimum von 16 gezeigt

method          simple;		//einfache Zerlegung in gleich große Abschnitte

simpleCoeffs
{
    n               (1 1 $numberOfSubdomains);	//Zerlegung in z-Richtung
    delta           0.001;
}


