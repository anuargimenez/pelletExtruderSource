FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include        "initialConditions"		//Einbinden des "initialConditions"-File um Variablen zug채nglich zu machen

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    inlet
    {
        type            fixedValue;
        value           uniform (0 0 $Filamentgeschw);		//Definiert in 0/initialConditions
    }

    outlet
    {
        type            zeroGradient;
    }

    wall_top
    {
        type            slip;		//keine Wandhaftung im Zylindrischen Bereich der D체se
    }

    wall_middle
    {
        type            noSlip;		//Wandhaftung im konischen Teil der D체se
    }

    wall_bottom
    {
        type            noSlip;		//Wandhaftung im Auslauf der D체se
    }
    front_top
    {
        type            wedge;
    }

    front_middle
    {
        type            wedge;
    }

    front_bottom
    {
        type            wedge;
    }

    back_top
    {
        type            wedge;
    }

    back_middle
    {
        type            wedge;
    }
    back_bottom
    {
        type            wedge;
    }
    axis_top
    {
        type            symmetryPlane;
    }
    axis_middle
    {
        type            symmetryPlane;
    }
    axis_bottom
    {
        type            symmetryPlane;
    }
}

